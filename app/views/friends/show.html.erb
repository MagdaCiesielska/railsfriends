<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead">
    <%= @friend.phone %> |
    <%= @friend.email %> |
    <%= @friend.twitter %> 
  </p>
  <hr class="my-4">
  <div>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
  </div>
  <br/>
  <div>  
    <%= button_to "Delete", @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
  </div>
  <br/>
  <div>
    <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
  </div>
</div>



